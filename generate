#!/usr/bin/env bash
set -euo pipefail

for post in posts/*.md; do
    creation_date="$(yq --front-matter extract '.date' "$post")"
    touch -t "${creation_date}2137" "$post"
    echo "Updated creation date for $post"
done


MD_RENDERER="pandoc --toc --lua-filter=tools/anchor-links.lua"
ssb -m "$MD_RENDERER" index.md writing.md contact.md
